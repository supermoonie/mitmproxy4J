<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.supermoonie.proxy.swing.mapper.ContentMapper">
    <resultMap id="BaseResultMap" type="com.github.supermoonie.proxy.swing.entity.Content">
        <id column="id" jdbcType="VARCHAR" property="id"/>
        <result column="content" jdbcType="BLOB" property="content"/>
        <result column="time_created" jdbcType="VARCHAR" property="timeCreated" typeHandler="com.github.supermoonie.proxy.swing.db.TextDateTypeHandler"/>
    </resultMap>

    <select id="selectById" resultMap="BaseResultMap" parameterType="java.lang.String">
        select * from content where id = #{id}
    </select>
</mapper>