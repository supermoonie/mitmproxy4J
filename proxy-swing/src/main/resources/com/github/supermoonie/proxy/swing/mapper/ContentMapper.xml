<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.supermoonie.proxy.swing.mapper.ContentMapper">

    <resultMap type="com.github.supermoonie.proxy.swing.entity.Content" id="ContentMap">
        <result property="id" column="id" jdbcType="VARCHAR"/>
        <result property="content" column="content" jdbcType="BLOB"/>
        <result property="timeCreated" column="time_created" jdbcType="VARCHAR"
                typeHandler="com.github.supermoonie.proxy.swing.db.TextDateTypeHandler"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="ContentMap">
        select id,
               content,
               time_created
        from content
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="ContentMap">
        select id,
               content,
               time_created
        from content
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="ContentMap">
        select
        id, content, time_created
        from content
        <where>
            <if test="id != null and id != ''">
                and id = #{id}
            </if>
            <if test="content != null">
                and content = #{content}
            </if>
            <if test="timeCreated != null">
                and time_created = #{timeCreated}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert">
        insert into content(id, content, time_created)
        values (#{id}, #{content}, #{timeCreated})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update content
        <set>
            <if test="content != null">
                content = #{content},
            </if>
            <if test="timeCreated != null">
                time_created = #{timeCreated},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from content
        where id = #{id}
    </delete>

</mapper>